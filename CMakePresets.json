{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug Build",
      "description": "Use this for development with debug info and logging",
      "hidden": false,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "ENABLE_TESTING": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "description": "Optimized release build with logger disabled",
      "hidden": false,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "ENABLE_TESTING": "OFF"
      }
    },
    {
      "name": "dist",
      "displayName": "Distribution Build",
      "description": "Optimized distribution build",
      "hidden": false,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/dist",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "OFF",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/dist",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static",
        "BUILD_SHARED_LIBS": "OFF",
        "ENABLE_TESTING": "OFF"
      }
    },
    {
      "name": "test",
      "displayName": "Test Build",
      "description": "Build for running unit tests",
      "hidden": false,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/test",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "ENABLE_TESTING": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "dist",
      "configurePreset": "dist"
    },
    {
      "name": "test",
      "configurePreset": "test"
    }
  ]
}
